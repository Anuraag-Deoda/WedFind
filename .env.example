# ── Core ─────────────────────────────────────────────────────────────
SECRET_KEY=change-this-to-a-random-64-char-hex-string
FLASK_ENV=production

# ── Database ──────────────────────────────────────────────────────────
DATABASE_URL=sqlite:////app/data/app.db

# ── Storage ───────────────────────────────────────────────────────────
STORAGE_DIR=/app/storage
MAX_CONTENT_LENGTH=52428800
MAX_IMAGES_PER_UPLOAD=50

# ── Celery / Redis ────────────────────────────────────────────────────
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ── ChromaDB ──────────────────────────────────────────────────────────
CHROMADB_DIR=/app/chromadb_data

# ── Face Search ───────────────────────────────────────────────────────
FACE_SIMILARITY_THRESHOLD=0.70
MAX_SEARCH_RESULTS=100
INSIGHTFACE_MODEL=buffalo_l
INSIGHTFACE_DET_SIZE=640

# ── Auth ──────────────────────────────────────────────────────────────
# Generate with: python3 -c "import bcrypt; print(bcrypt.hashpw(b'yourpassword', bcrypt.gensalt()).decode())"
ADMIN_PASSWORD_HASH=
JWT_SECRET=change-this-to-a-random-string
EVENT_TOKEN_EXPIRY_HOURS=24

# ── Rate Limiting ─────────────────────────────────────────────────────
RATELIMIT_STORAGE_URI=redis://redis:6379/1
RATELIMIT_DEFAULT=200/minute

# ── Logging ───────────────────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FORMAT=json

# ── CORS ──────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:8080

# ── Image Processing ─────────────────────────────────────────────────
PROCESSED_MAX_SIZE=2048
THUMBNAIL_SIZE=400
JPEG_QUALITY=85
THUMBNAIL_QUALITY=80
ENABLE_WEBP_THUMBNAILS=true
ENABLE_DEDUPLICATION=true
PHASH_DISTANCE_THRESHOLD=8

# ── Frontend ──────────────────────────────────────────────────────────
BACKEND_URL=http://flask:5000
